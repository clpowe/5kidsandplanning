---
const { name, quote, image } = Astro.props
---

<div class='author'>
	<div class='content'>
		<img src={image} alt='' />
		<div>
			<p class='postedby'>Posted by:</p>
			<p class='name'>{name}</p>
		</div>
	</div>
	<blockquote>
		{quote}
	</blockquote>
</div>

<style>
	.author {
		display: grid;
		gap: var(--s-1);
		padding-block: var(--s-1);
		border-top: var(--border);
		border-bottom: var(--border);
		max-width: 60ch;
	}

	.content {
		display: flex;
		align-items: center;
		gap: var(--s1);
		align-self: stretch;
	}

	img {
		width: 90px;
		height: 90px;
		border-radius: 100%;
	}

	.postedby {
		font-weight: bold;
	}
</style>
