---
interface Props {
	title: string
	date: string
	image: string
	description: string
	slug: string
	tags?: string[]
}

const { title, date, image, description, slug, tags } = Astro.props
---

<div class='space-y-4'>
	<time>{date}</time>
	<img height='200' width='600' src={image} alt='' class='w-full' />
	<div class='space-y-2'>
		<h2 class='text-4xl font-bold'>
			<a class='' href={slug}>{title}</a>
		</h2>
		<p>{description}</p>
	</div>
</div>

